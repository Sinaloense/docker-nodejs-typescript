{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to process",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
        
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        }
    ]
}